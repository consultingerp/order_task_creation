<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="delivery_item_form" model="ir.ui.view">
            <field name="name">delivery.item.form</field>
            <field name="model">delivery.item</field>
            <field name="arch" type="xml">
                <form string="Delivery Condition">
                    <sheet>
                        <group colspan="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
			</field>
			</record>

        <record id="delivery_item_tree" model="ir.ui.view">
            <field name="name">delivery.item.tree</field>
            <field name="model">delivery.item</field>
            <field name="arch" type="xml">
                <tree string="Delivery Condition">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_delivery_item" model="ir.actions.act_window">
            <field name="name">Delivery Time</field>
            <field name="res_model">delivery.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Delivery Time" id="delivery_time" parent="base.menu_sale_config" action="action_delivery_item" groups="base.group_configuration"/>

    </data>
</openerp>
