<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="branding_position_form_view">
            <field name="name">branding.position.form.view</field>
            <field name="model">branding.position</field>
            <field name="arch" type="xml">
                <form string="Branding">
                    <sheet>
                        <group colspan="4" cols="2">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="branding_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="branding_position_tree_view" model="ir.ui.view">
            <field name="name">branding.position.tree.view</field>
            <field name="model">branding.position</field>
            <field name="arch" type="xml">
                <tree string="Refinement Options">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="branding_ids"/>
                </tree>
            </field>
        </record>
    
    
        <record id="action_branding_position" model="ir.actions.act_window">
            <field name="name">Branding</field>
            <field name="res_model">branding.position</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

       <record model="ir.ui.view" id="branding_item_form_view">
            <field name="name">branding.item.form.view</field>
            <field name="model">branding.item</field>
            <field name="arch" type="xml">
                <form string="Branding Item">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="brand_item"/>
                            <field name="pre_cost_ids" widget="many2many_tags"/>
                            <field name="no_color"/>
                            <field name="selling_price"/>
                            <field name="purchase_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="branding_item_tree_view" model="ir.ui.view">
            <field name="name">branding.item.tree.view</field>
            <field name="model">branding.item</field>
            <field name="arch" type="xml">
                <tree string="Branding Items">
                    <field name="name"/>
                    <field name="brand_item"/>
                    <field name="pre_cost_ids"/>
                    <field name="no_color"/>
                    <field name="selling_price"/>
                </tree>
            </field>
        </record>
    
    
        <record id="action_branding_item" model="ir.actions.act_window">
            <field name="name">Branding Item</field>
            <field name="res_model">branding.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

       <record model="ir.ui.view" id="pre_cost_form_view">
            <field name="name">pre.cost.form.view</field>
            <field name="model">pre.cost</field>
            <field name="arch" type="xml">
                <form string="Pre Cost">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="pre_cost"/>
                            <field name="is_variable_cost"/>
                            <field name="is_optional"/>
                            <field name="selling_price"/>
                            <field name="purchase_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="pre_cost_tree_view" model="ir.ui.view">
            <field name="name">pre.cost.tree.view</field>
            <field name="model">pre.cost</field>
            <field name="arch" type="xml">
                <tree string="Pre Cost">
                    <field name="name"/>
                    <field name="pre_cost"/>
                    <field name="is_variable_cost"/>
                    <field name="is_optional"/>
                    <field name="selling_price"/>
                </tree>
            </field>
        </record>
    
        <record id="action_pre_cost" model="ir.actions.act_window">
            <field name="name">Pre Cost</field>
            <field name="res_model">pre.cost</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

       <record model="ir.ui.view" id="handling_group_form_view">
            <field name="name">handling.group.form.view</field>
            <field name="model">handling.group</field>
            <field name="arch" type="xml">
                <form string="Pre Cost">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="handle_grp"/>
                            <field name="selling_price"/>
                            <field name="purchase_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="handling_group_tree_view" model="ir.ui.view">
            <field name="name">handling.group.tree.view</field>
            <field name="model">handling.group</field>
            <field name="arch" type="xml">
                <tree string="Pre Cost">
                    <field name="name"/>
                    <field name="handle_grp"/>
                    <field name="selling_price"/>
                    <field name="purchase_price"/>
                </tree>
            </field>
        </record>
    
        <record id="action_handling_group" model="ir.actions.act_window">
            <field name="name">Handling Group</field>
            <field name="res_model">handling.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Refinement" id="refinement_parent_main" groups="refinement_new.group_refinement_manager"/>
        
        <menuitem name="Refinement" id="refinement_main" parent="refinement_new.refinement_parent_main" groups="refinement_new.group_refinement_manager"/>

        <menuitem name="Configuration" id="refinement_config" parent="refinement_new.refinement_parent_main" groups="refinement_new.group_refinement_manager"/>
        
        <menuitem id="menu_branding_position" name="Branding Position" parent="refinement_new.refinement_config" action="action_branding_position" groups="refinement_new.group_refinement_manager"/>

        <menuitem id="menu_branding_item" name="Branding Items" parent="refinement_new.refinement_config" action="action_branding_item" groups="refinement_new.group_refinement_manager"/>

        <menuitem id="menu_pre_cost" name="Pre Cost" 
            parent="refinement_new.refinement_config" action="action_pre_cost" 
            groups="refinement_new.group_refinement_manager"/>

        <menuitem id="menu_handling_cost" name="Handling Cost" parent="refinement_new.refinement_config" action="action_handling_group" groups="refinement_new.group_refinement_manager"/>
    </data>
</openerp>    
