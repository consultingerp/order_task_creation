<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_source_inherit" model="ir.ui.view">
        <field name="name">view.sale.source.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='route_id']" position="replace">
                 <field name="route_id" groups="sale_stock.group_route_so_lines"/>
            </xpath>
            <xpath expr="//field[@name='incoterm']" position="attributes">
                <attribute name="groups">"base.group_user"</attribute>
            </xpath>
        </field>
    </record>
</odoo>
