<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<template id="job_apply_form_inherited" inherit_id="website_hr_recruitment.apply" customize_show="True" name="Applicant Form">
		    <xpath expr="//div[@id='wrap']/div/section[@id='forms']/form/div[3]" position="after">
				<div class="form-group row form-field o_website_form_required_custom">
					<div class="col-lg-3 col-md-4 text-right">
						<label class="col-form-label" for="salary_expected">Expected Salary</label>
					</div>
					<div class="col-lg-7 col-md-8">
						<input type="text" class="form-control o_website_form_input" name="salary_expected" required=""/>
					</div>
				</div>
		    </xpath>
		</template>

        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>hr.applicant</value>
            <value eval="[
                'description',
                'email_from',
                'partner_name',
                'partner_phone',
                'job_id',
                'department_id',
                'salary_expected',
            ]"/>
        </function>
</odoo>
