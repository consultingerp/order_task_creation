<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_template_view_extended_sku" model="ir.ui.view">
            <field name="name">view.product.view.sku.extended</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="vendor_sku"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_product_view_extended_sku" model="ir.ui.view">
            <field name="name">view.product.view.sku.extended</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="vendor_sku"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
