<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_multiple_changes_inherit" model="ir.ui.view">
            <field name="name">view.partner.multiple.changes.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="website_partner.view_partners_form_website"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[@name='website_publish_button']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="search_words" string="Search Words">
                            <field name="search_words"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_partner_search_view_inherit" model="ir.ui.view">
            <field name="name">view.partner.search.view.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="search_words" string="Search Words"/>
                    <field name="id" string="Contact ID" domain="[('id', '=', self.id)]"/>
                    <field name="est_budget" string="Estimated Budget"/>
                    <field name="current_sale" string="Current Sale"/>
                    <field name="prev_sale" string="Previous Sale"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_contact_id_form" model="ir.ui.view">
            <field name="name">contact.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(4, ref('base.group_sale_salesman')), (4, ref('base.group_partner_manager'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="after">
                    <field name="id" string="Contact ID"/>
                 </xpath>
            </field>
        </record>


        <record id="view_partner_budget_inherit" model="ir.ui.view">
            <field name="name">view.partner.budget.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="est_budget"/>
                    <field name="current_sale"/>
                    <field name="prev_sale"/>

                </xpath>
<!--                 <xpath expr="//group/group[2]" position="after">
                        <div class="or_title" col="4">
                                <label for="current_sale"/>
                                <field name="current_sale" class="oe_inline"/>
                                <label string="%" class="oe_inline"/>
                        </div>
                        <div col="4">
                                <label for="prev_sale"/>
                                <field name="prev_sale" class="oe_inline"/>
                                <label string="%" class="oe_inline"/>
                        </div>
                </xpath> -->
            </field>
        </record>

    </data>
</openerp>
