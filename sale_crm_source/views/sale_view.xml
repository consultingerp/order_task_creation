<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_view_opportunity_form" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_crm.sale_view_inherit123"/>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='technical']" position="attributes">
                    <attribute name="groups">base.group_sale_manager</attribute>
                </xpath>
                <xpath expr="//group[@name='technical']/field[@name='opportunity_id']" position="attributes">
                    <attribute name="groups">base.group_sale_manager</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
