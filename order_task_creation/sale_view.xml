<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_sale_order_inherit" model="ir.ui.view">
			<field name="name">view.sale_order_inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<div class="oe_button_box" name="button_box">
                    <button name="action_view_task_source"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-tasks"
                        attrs="{'invisible': [('task_count', '=', 0)]}">
                        <field name="task_count" widget="statinfo" string="Task"/>
                    </button>
				</div>
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="is_task" invisible="True"/>
				</xpath>
				<xpath expr="//form/header" position="inside">
					<button name="create_task" string="Create Task"
					type="object" attrs="{'invisible': [('is_task', '=', True)]}" />
				</xpath>
				<xpath expr="//page[2]" position="after">
					<page string="Taks Description">
						<field name="task" >
							<tree>
								<field name="name" />
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</openerp>
