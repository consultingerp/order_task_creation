<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report
                id="layout_confirm_order_report"
                model="sale.order"
                string="Confirm Order Layout"
                report_type="qweb-pdf"
                name="refinement_new.report_confirm_order_layout"
                file="refinement_new.report_confirm_order_layout"
                paperformat="refinement_new.paperformat_custom_format_SO"/>

        <template id="confirm_order_layout_report">
            <t t-call="report.html_container">
                <!-- <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" /> -->
                <t t-foreach="docs" t-as="o">
                    <t t-call="refinement_new.custom_confirm_order_header_footer">
                        <!-- <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" /> -->
                        <div class="page">
                            <style>
                                .report_font
                                {

                                }
                                .col-xs-4
                                {
                                background-color:white;
                                position: absolute;
                                top: -17px;
                                padding:5px;
                                left:15px;
                                }
                                .block
                                {
                                margin-top:10px;
                                }
                                .left-div
                                {
                                position: relative;
                                border:2px solid blue;
                                padding:20px;
                                }
                                .inner-div
                                {
                                margin-left:20px;
                                }
                                .address-table
                                {
                                width:100%;
                                }
                                .address-table td
                                {
                                width:50%;
                                padding:5px;
                                }
                                .table-style {
                                border-collapse: collapse;
                                }
