<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Email template -->
        <record id="email_template_edi_sale_layout" model="mail.template">
            <field name="name">Sales Order - Send by Email(Layout)</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">Ihr Angebot über " ${object.layout_product}" (${object.name})</field>
            <field name="partner_to">${object.partner_invoice_id.id}</field>
            <field name="model_id" ref="refinement_new.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="refinement_new.order_layout_quotation_report"/>
            <field name="report_name">${(object.name or '').replace(' ','_')}_${object.layout_product or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

<p>Hallo ${object.partner_id.title.name} ${object.partner_id.lastname},</p>
<p>anbei finden Sie im Anhang das gewünschte PDF-Angebot zu Ihrem angefragtem Werbeartikel.</p>
<p>Bei weiteren Fragen oder geänderten Projektanforderungen, zögern Sie nicht, mich zu kontaktieren.</p>
<p>Zur Beauftragung reicht bereits eine kurze Bestätigung per E-Mail.</p>
<p><br></p>]]></field>
        </record>

    </data>
</odoo>
